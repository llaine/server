{
  "name": "server",
  "version": "0.0.1",
  "description": "REST API for Face resource",
  "main": "src/server.ts",
  "author": "llaine",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "faker": "^5.1.0",
    "helmet": "^4.1.1",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "server.ts"
    ],
    "exec": "ts-node -r tsconfig-path/register ./src"
  },
  "scripts": {
    "test": "nodemon --config ./spec/nodemon.json",
    "start:dev": "nodemon",
    "start": "node -r module-alias/register ./dist --env=production",
    "build": "tsc --project ./",
    "lint": "tslint --fix --project \"tsconfig.json\""
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.8",
    "@types/faker": "^5.1.0",
    "@types/helmet": "^0.0.48",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.11.1",
    "nodemon": "^2.0.4",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3"
  },
  "_moduleAliases": {
    "routes": "routes",
    "respositories": "repositories"
  }
}
